{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi":["error", "always"],
        "no-var": "warn",
        "no-dupe-args":"error",
        "no-dupe-keys":"error",
        "no-invalid-this":["error", "never"],
        "no-extra-bind":"error",
        "no-const-assign":"error",
        "no-case-declarations":"off",
        "require-atomic-updates": "off",
        "quotes":[2, "single"],
        "indent":["error", 4],
        "no-mixed-operators":"off"
    }
}

